<%= render 'layouts/notifications' %>
<div class="m-4">
    <%= form_with model: @task, url: "/edit_task/#{@task.id}", method: :post do |f| %>
        <div class="form-group">
            <%= f.label :description, "Task Description: ", class: "form-label text-dark fs-4"%>
            <%= f.text_field :description, class: "form-control",  required: true%>
        </div>
        <div class="form-group">
            <%= f.label :ticketNo, "Ticket Number: ", class: "form-label text-dark fs-4"%>
            <%= f.text_field :ticketNo, class: "form-control",  required: true%>
        </div>
        <div class="form-group">
            <%= f.select :task_type, [["Bug", "bug"], ["Feature", "feature"]] %>
        </div>
        <div class="form-group">
            <%= f.label :ending_date %>
            <%= f.date_field :ending_date, class: "form-control" %>
        </div>
           
        <div class="field">
            <%= f.label :priority %>
            <%= f.select :priority, options_for_select((1..10).to_a) %>
        </div>

        <div class="field">
            <%= f.label :Developer, "Assign to developer" %>
            <% if @developer %>
            
                
                <%= f.select :Developers, options_for_select(@developer.map { |developer| ["#{developer.name} - #{developer.specilization}", developer.id] },  @selectedDeveloper.id) %>
                    
                

            <% end %>
            
            
        </div>
        <div class="form-group m-3">
            <%=f.submit "Update Task", class: "btn btn-primary btn-lg" %>
        </div>

    



    <%end%>

</div>