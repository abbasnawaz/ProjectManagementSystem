
<div class="container">
    <%= form_with model: @task ,url:"/add_task", method: :post do |f| %>

        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.select :task_type, [["Bug", "bug"], ["Feature", "feature"]] %>
        </div>

        <div class="form-group">
            <%= f.label :ending_date %>
            <%= f.date_field :ending_date, class: "form-control" %>
        </div>
        
        <div class="field">
            <%= f.label :priority %>
            <%= f.select :priority, options_for_select((1..10).to_a) %>
        </div>

        <div class="field">
            <%= f.label :developer_id, "Assign to developer" %>
            <% if @developer %>
                <%= f.select :developer_id, options_for_select(@developer.map { |developer| [developer.name, developer.specilization, developer.id] }) %>
            <% end %>
            
            
        </div>
        

    

    <div class="form-group">
        <%= f.submit "Create Project", class: "btn btn-primary" %>
    </div>



    <% end %>

</div>