<%= render 'layouts/notifications' %>
  <div class="container">
    <table class="table mt-4 m-3 table-borderless table-hover">
      <thead>
        <tr>
          <th scope="col">Project Name</th>
          <th scope="col">Starting Date</th>
          <th scope="col">Ending Date</th>
          <th scope="col">Update</th>
          <th scope="col">Delete</th>
          <th scope="col">View Tickets</th>
          
          
          
        </tr>
      </thead>
      <tbody>

        <% @projects.each do |project| %>

          
            <tr>
                <th scope="row"><%= project.project_name %></th>
                <td><%= project.starting_date %></td>
                <td><%= project.ending_date %> </td>

                <td><%= link_to "Edit Project", "/edit_project/#{project.id}", class: "btn btn-primary" %></td>
                <td><%= link_to "Delete Project", "/delete_project/#{project.id}", class: "btn btn-danger" %></td>

                <td><%= link_to "View Tickets", "/project_task/#{project.id}", class: "btn btn-secondary" %></td>


            </tr>
      
        <% end  %>

        
      </tbody>

      <%= link_to "Add Project", "/add_project", class: "btn btn-success m-3 btn-lg" %>
      <%= link_to "Developer", "/developer/all", class: "btn btn-dark m-3 btn-lg" %>
    </table>


  </div>
    
