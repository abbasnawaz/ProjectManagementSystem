<%= render 'layouts/notifications' %>

  <div class="m-4">
    <%= form_with model: @project, url: "/edit_project/#{@project.id}", method: :post do |f| %>
    
      <div class="form-group">
        <%= f.label :project_name, "Project Name: ", class: "form-label text-dark fs-4"%>
        <%= f.text_field :project_name, class: "form-control",  required: true%>
      </div>
      <div class="form-group">
        <%= f.label :starting_date, "Starting Date: ", class: "form-label text-dark fs-4"%>
        <%= f.date_field :starting_date, class: "form-control",  required: true%>
      </div>
      <div class="form-group">
        <%= f.label :ending_date, "Ending Date: ", class: "form-label text-dark fs-4"%>
        <%= f.date_field :ending_date, class: "form-control",  required: true%>
      </div>
      <div class="form-group m-3">
        <%=f.submit "Update User", class: "btn btn-primary btn-lg" %>
      </div>
    <%end%>
  </div>