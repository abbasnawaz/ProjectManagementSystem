<%= render "layouts/navbar"%>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Add user</h1>
    </div>
</div>

<div class="m-4">


    <%= form_with  do |form| %>
    
    <div class="form-group">
    <%= form.label :name, "Enter Your name: ", class: "form-label text-dark fs-4"%>
    <%= form.text_field :name, class: "form-control", required: true%>
    </div>

    <div class="form-group">
    <%= form.label :email, "Enter Your Email: ", class: "form-label text-dark fs-4"%>
    <%= form.email_field :email, class: "form-control", required: true%>
    </div>


    <div class="form-group">
    <%= form.label :password, "Enter Your Password: ", class: "form-label text-dark fs-4"%>
    <%= form.password_field :password, class: "form-control", required: true%>
    </div>



    <div class="form-group">
    <%= form.label :f_name, "Enter Your First Name: ", class: "form-label text-dark fs-4"%>
    <%= form.text_field :f_name, class: "form-control", required: true%>
    </div>

    <div class="form-group">
    <%= form.label :l_name, "Enter Your Last Name: ", class: "form-label text-dark fs-4"%>
    <%= form.text_field :l_name, class: "form-control", required: true%>
    </div>

    <%# organization %>

    <div class="form-group">
    <%= form.label :organization, "Enter Your organization Name: ", class: "form-label text-dark fs-4"%>
    <%= form.text_field :organization, class: "form-control", required: true%>
    </div>

    <div class="form-group m-3">
    <%=form.submit "Add User", class: "btn btn-primary btn-lg" %>
    </div>

    



<%end%>

</div>

