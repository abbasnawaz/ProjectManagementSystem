
<% if flash[:error]%>
  <div class="alert alert-info m-2">
    <strong>Error : </strong> <%= flash[:error]%>
  </div>
<% end %>


<div class="m-4">


    <%= form_with model: @user, url: "/update_user/#{@user.id}", method: :post do |f| %>
    
    <div class="form-group">
    <%= f.label :username, "Enter Your name: ", class: "form-label text-dark fs-4"%>
    <%= f.text_field :username, class: "form-control",  required: true%>
    </div>

    <div class="form-group">
    <%= f.label :email, "Enter Your Email: ", class: "form-label text-dark fs-4"%>
    <%= f.email_field :email, class: "form-control",  required: true%>
    </div>


   



    <div class="form-group">
    <%= f.label :f_name, "Enter Your First Name: ", class: "form-label text-dark fs-4"%>
    <%= f.text_field :f_name, class: "form-control",  required: true%>
    </div>

    <div class="form-group">
    <%= f.label :l_name, "Enter Your Last Name: ", class: "form-label text-dark fs-4"%>
    <%= f.text_field :l_name, class: "form-control", required: true%>
    </div>

    <%# organization %>

    <div class="form-group">
    <%= f.label :organization, "Enter Your organization Name: ", class: "form-label text-dark fs-4"%>
    <%= f.text_field :organization, class: "form-control", required: true%>
    </div>

    <div class="form-group m-3">
    <%=f.submit "Update User", class: "btn btn-primary btn-lg" %>
    </div>

    



<%end%>

</div>